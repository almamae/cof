<!-- slider -->
<div class=" home-slider">
	<% if @posts = nil %>
		No posts in this category.
	<%else %>
	<% @posts.each do |post|%>
	<article>
	<div class="post"><a href="#"><h5 class="post-title"><%= link_to post.title, post %></h5></a>
		<p> <%= post.content%></p>
		<p><em><%= post.created_at %></em></p>	
	</div>
	<div class="meta">
		<div class="user"><%= 	User.find(post.user_id).email %></div>
		<div class="categories"><em><%= post.category %></em></div>
		<div class="comments"><a href="posts/<%= post.id %>"><%= post.comments.count()%> comments </a></div>
	</div>
	<hr />
	</article>

	<% end %>
	<div>
		<%= will_paginate @posts%></div>
	<% end %>
</div>	

