		<!-- slider -->
<div class=" home-slider">
<%= link_to "Add a New Post", new_post_path %>

	<% @posts.each do |post|%>
	<article>
		<div class="post"><a href="#"><h5><%= link_to post.title, post %></h5></a>
			<%= truncate post.content, length: 160 %>
			<% if post.content.length > 160 %>
			<%= link_to "read more", post %> 
			<% end %><p><%= link_to "Edit", edit_post_path(post) %> | 
			<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %> &nbsp; <em>Posted on <%= post.created_at %></em></p>
		</div>
		<div class="meta">
			<div class="categories"><em><%= post.category %></em></div>
		</div>
		<hr />
	</article>
	<% end %><br/>
	<%= will_paginate @posts%>
</div>
